<%
name : 'create_database'
version : '0.2'
dest : '${module["pascalName"]}.sql'
%>
DROP TABLE ${module['tableName']};
CREATE TABLE ${module['tableName']} (
  ${ ",\n  ".join("%s %s%s %s" % ( 
      f["columnName"], 
      f["databaseType"],
      '(%d)' % int(f['max']) if f['type'] in ['string', 'text'] else '',
      'PRIMARY KEY' if f['isId'] else ''
    ) for f in module["fields"])}
);
