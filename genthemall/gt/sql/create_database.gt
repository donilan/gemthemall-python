<%
name : 'create_database'
version : '0.1'
dest : '${module.pascalName}.sql'
%>
DROP TABLE ${module.tableName};
CREATE TABLE ${module.tableName} (
  % for i, p in enumerate(module.properties):
  ${p.columnName} ${p.databaseType}${('(%d)' % p.max) if p.type in ['string', 'text'] else ''}${',' if i+1 < len(module.properties) else ''}
  % endfor
);
